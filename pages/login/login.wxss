.input-box {
  width: 70%;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 0 20rpx;
  background-color: #f2f2f2;
  font-size: 35rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(71, 70, 70);
  background-color: #f2f2f2;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  display: inline-block;
  margin-top: 50rpx;
}
.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
}




