.avatar-wrapper {
  padding: 0;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
  width: 100px;
  height: 100px;
}

.avatar {
  display: block;
  width: 100px;
  height: 100px;
}

