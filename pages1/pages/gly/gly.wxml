<!--pages1/pages/gly/gly.wxml-->

<view class="swiper-tab">
  <view class="tb"><text>管理员</text></view>
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">身份审核</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">病例审核</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">上传科普热点</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item>
    <view class="cell" wx:for="{{sfsh}}" wx:key="sfsh" wx:for-index="index" data-index='{{index}}' bindtap="sfshqk">
      <image src="{{item.avatarurl}}"></image>
      <view class="name">
        <view class="nm">
          <text>{{item.nickName}}</text>
        </view>
        <view class="bl">
          <text>认证身份：{{item.sfpd}}</text>
        </view>
      </view>
    </view>

    <block wx:if="{{dataILu}}">
      <view class="loadMore">正在加载中...</view>
    </block>

  </swiper-item>
  <swiper-item>

    <view class="cell" wx:for="{{sh}}" wx:key="sh" wx:for-index="index" data-index='{{index}}' bindtap="shqk">
      <image src="{{item.avatarurl}}"></image>
      <view class="name">
        <view class="nm">
          <text>{{item.xsname}}</text>
        </view>
        <view class="bl">
          <text>{{item.bname}}</text>
        </view>
      </view>
    </view>

    <block wx:if="{{dataILu}}">
      <view class="loadMore">正在加载中...</view>
    </block>

  </swiper-item>

  <swiper-item class="gaodu">
    <view id="total">
      <form bindsubmit="create_sc">
        <view id="t1">
          <text>标题:</text><input type="text" name="title" id="use" placeholder="文章标题" value="{{title}}"></input>
        </view>
        <view id="t2">
          <text>描述:</text><input type="text" name="ms" id="pass1" placeholder="描述" value="{{ms}}"></input>
        </view>
        <view id="t3">
          <text>详细信息:</text><input type="text" name="xxxx" id="pass2" placeholder="请输入详细信息" value="{{xxxx}}"></input>
        </view>
        <view id="t4">
          <text>公众号链接:</text><input type="text" name="lj" id="pass3" placeholder="输入公众号链接" value="{{lj}}"></input>
        </view>

        <view id="t5">
          <text>年龄段:</text><input type="number" name="zt" id="pass4" placeholder="输入年龄段" value="{{zt}}"></input>
        </view>

        <view id="t6">
          <view bindtap="showPopup">
            <van-field  disabled="disabled" value="{{ xbt }}" placeholder="请选择" label="标签:" name="bq" id="pass5" />
          </view>
        </view>

        <button id="btn1" form-type="submit"><text>上传</text></button>
      </form>

    </view>
  </swiper-item>
</swiper>

<view class="box">
  <view class="cu-bar tabbar bg-white">
    <view class="action" bindtap="swichNav1">
      <view class="cuIcon-cu-image">
        <image src="/images/12.png"></image>
      </view>
      <view class="text-2">首页</view>
    </view>
    <view class="action" bindtap="swichNav2">
      <view class="cuIcon-cu-image">
        <image src="/images/22.png"></image>
      </view>
      <view class="text-2">我的咨询</view>
    </view>
    <view class="action">
      <view class="cuIcon-cu-image" bindtap="swichNav5">
        <image src="/images/lt1.png"></image>
      </view>
      <view class="text-2">论坛</view>
    </view>
    <view class="action" wx:if="{{gly}}">
      <view class="cuIcon-cu-image" bindtap="swichNav4">
        <image src="/images/gly1.png"></image>
      </view>
      <view class="text-1">管理员</view>
    </view>
    <view class="action">
      <view class="cuIcon-cu-image" bindtap="swichNav3">
        <image src="/images/32.png"></image>
      </view>
      <view class="text-2">我的</view>
    </view>
  </view>
</view>

<van-popup show="{{ show }}" bind:close="onClose" position="bottom" custom-style="height: 40%">
  <van-picker title="选择标签" show-toolbar columns="{{ columns }}" bind:cancel="onClose" bind:confirm="onConfirm"
    class="xzq"/>
</van-popup>