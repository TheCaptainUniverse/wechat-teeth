<!--index.wxml-->
<view class="TT">
  <navigationBar wx:if="{{showNotice}}" navigationBarType="notice" noticeText="{{navigationBarNoticeText}}" showBack="{{false}}" showHome="{{false}}"></navigationBar>
  <navigationBar wx:if="{{!showNotice}}" title="首页" showBack="{{false}}" showHome="{{false}}"></navigationBar>
  <!-- 滚动栏 -->
<view class="swiper-container">
    <swiper class="swiper"  autoplay interval="5000" circular>
      <block>
        <swiper-item wx:for="{{bannerList}}" wx:key="index" wx:for-item="banner">
          <image src="{{banner.img_url}}" class="swiper-img" mode="scaleToFill" bindtap="onBannerImage" data-info="{{banner}}"></image>
        </swiper-item>
      </block>
    </swiper>
</view>
  <view class="gn" >
    <van-grid clickable column-num="4" icon-size="35px" center>
      <van-grid-item
        icon="/images/医生.svg"
        link-type="navigateTo"
        url="../mywz/mywz"
        text="名医问诊"
      />
      <van-grid-item
        icon="/images/资讯.svg"
        link-type="navigateTo"
        url="../kqrd/kqrd"
        text="慧齿百科"
      />
      <van-grid-item
        icon="/images/自诊.svg"
        link-type="navigateTo"
        url="../znzz/znzz"
        text="智能自诊"
      />
      <van-grid-item
        icon="/images/展开.svg"
        link-type="navigateTo"
        bindtap="swichNav111"
        wx:if="{{gd}}"
        text="更多"
      />
      <van-grid-item
        icon="/images/医院.svg"
        link-type="navigateTo"
        url="../yljg/yljg"
        wx:if="{{gd1}}"
        text="医疗机构"
      />
      <van-grid-item
        icon="/images/打卡.svg"
        link-type="navigateTo"
        url="../daka/daka"
        wx:if="{{gd1}}"
        text="每日打卡"
      />
      <van-grid-item
        icon="/images/病例.svg"
        link-type="navigateTo"
        url="../blwzzl/blwzzl"
        wx:if="{{gd1}}"
        text="病例资料"
      />
      <van-grid-item
        icon="/images/问卷.svg"
        link-type="navigateTo"
        url="../dcwj/dcwj"
        wx:if="{{gd1}}"
        text="调查问卷"
      />
      <van-grid-item
        icon="/images/招聘.svg"
        link-type="navigateTo"
        url="../rcsc/rcsc"
        wx:if="{{gd1}}"
        text="人才招聘"
      />
      <van-grid-item
        icon="/images/收起.svg"
        link-type="navigateTo"
        wx:if="{{gd1}}"
        bindtap="swichNav222"
        text="收回"
      />
    </van-grid>
     
  </view>

  <view class="rd">
    <view class="rdbt">
      <van-divider customStyle="color: #1C9BDC; border-color: #1C9BDC; font-size: 18px;"
       contentPosition="center" textColor="#1C9BDC" fontSize="20">每日推荐
      </van-divider>
    </view>
    <van-cell-group class="rdnr">
      <view class="cell" wx:for="{{mrtj}}" wx:key="key" wx:for-index="index"> 
        <van-cell bindtap="tjxx" title="{{item.title}}" data-index='{{index}}' size="mini" value="{{item.ageGroup}}" label="{{item.description}}" 
        clickable title-width="240px"/>
      </view>
    </van-cell-group>
  </view>
  <view class="wb">
    <text>牙管家 Ya Guanjia</text>
  </view>
  <view class="tt"></view>
</view>
<view class="box">
 <view class="cu-bar tabbar bg-white">
    <view class="action" bindtap="swichNav1">
      <view class="cuIcon-cu-image">
        <image src="/images/11.png"></image>
      </view>
      <view class="text-1">首页</view>
    </view>
    <view class="action" bindtap="swichNav2">
      <view class="cuIcon-cu-image">
        <image src="/images/22.png"></image>
      </view>
      <view class="text-2">我的咨询</view>
    </view>
    <view class="action">
      <view class="cuIcon-cu-image" bindtap="swichNav5">
        <image src="/images/lt1.png"></image>
      </view>
      <view class="text-2">论坛</view>
    </view>
    <view class="action" wx:if="{{gly}}">
      <view class="cuIcon-cu-image" bindtap="swichNav4">
        <image src="/images/gly.png"></image>
      </view>
      <view class="text-2">管理员</view>
    </view>
    <view class="action">
      <view class="cuIcon-cu-image" bindtap="swichNav3">
        <image src="/images/32.png"></image>
      </view>
      <view class="text-2">我的</view>
    </view>
  </view> 
</view>