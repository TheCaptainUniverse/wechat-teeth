<!--pages1/pages/ltlb/ltlb.wxml-->

<view class="tb">
  <navigationBar title="论坛" showBack="{{false}}" showHome="{{false}}"></navigationBar>
<van-search
  value="{{ value }}"
  label="帖子"
  placeholder="请输入搜索关键词"
  use-action-slot
  show-action
  shape="round"
  background="#B0D8E4"
  bind:change="onChange"
  bind:search="onSearch"
  >
  <view slot="action" bind:tap="onClick">搜索</view>
</van-search>

</view>
<view class="TT">
  <!-- <列表"/> -->
  <view wx:for="{{ltlb}}" wx:key="ltlb" wx:for-index="index" class="cu-card dynamic {{isCard?'no-card':''}}">
  <view class="cu-item shadow" bindtap="ltxq" data-index='{{index}}'>
    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{item.entity.imgUrl}});"></view>
        <view class="content flex-sub">
          <view>{{item.entity.nickName}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{item.timeFix}}
          </view>
        </view>
      </view>
    </view>
    <view class="text-content">
      {{item.entity.title}}
    </view>
    <view class="grid flex-sub padding-lr {{isCard?'col-3 grid-square':'col-1'}}">
      <image style="border-radius: 10px;" src="{{item.entity.picUrl}}"></image>   
    </view>
    <view class="text-gray text-sm text-right padding">
      <text class="cuIcon-attentionfill margin-lr-xs"></text> {{item.entity.viewerNumber}}
      <text class="cuIcon-appreciatefill margin-lr-xs"></text> {{item.entity.likerNumber}}
      <text class="cuIcon-messagefill margin-lr-xs"></text> {{item.entity.commentNumber}}
    </view>
  </view>
</view>
<view class="kb"></view>
</view>

