<!--pages/pages1/mygz/mygz.wxml-->
<view class="TT">
  <view class="tb">  
    <van-search
      value="{{ value }}"
      placeholder="请输入搜索关键词"
      show-action
      shape="round"
      background="#B0D8E4"
      bind:search="onSearch"
      bind:cancel="onCancel"
      />
    </view>
    <view class="T">
      <view style="width: 100%; height: 4vh;"></view>
      <view class="cell" wx:for="{{gz}}" wx:key="doctor" wx:for-index="index">
        <view class="cel">
          <image class="iii" src="{{item.imgUrl}}"></image>
          <view class="name">
            <view class="nm">
              <text>{{item.doctorName}}</text>
            </view>
            <view class="yy">
              <text>所在诊所/医院:{{item.hospital}}</text>
            </view>
            <view class="jj">
              <text>简介:{{item.introduction}}</text>
            </view>
          </view>
          <view class="bt">
            <view class="ntn" bindtap="qxgz" data-index='{{index}}'>
            <view class="tx"><image src="/images/gz2.png"></image></view>
            <view class="txt"><text>取消关注</text></view>
          </view>
          <view class="btn" bindtap="yy" data-index='{{index}}'>
            <text>预约</text>
          </view>
          </view>
        </view>
        <view style="width: 100%;height: 0.6em;"></view>
        <view class="count">
          <text style="margin-left: 10%;">好评率：<text style="color: red;">{{item.positiveReviewRate*100}}%</text></text>
          <text style="margin-left: 10%;">预约量：<text style="color: red;">{{item.appointmentCount}}</text></text>
          <text style="margin-left: 10%;">好评数：<text style="color: red;">{{item.positiveReviewNumber}}</text></text>
         </view>
         <view style="width: 100%;height: 0.6em;"></view>
      </view>
      <block wx:if="{{dataILu}}">
        <i-load-more />
      <i-load-more loading="{{ false }}" />
      </block>
    </view>
</view>

