<!--pages/yljg/yljg.wxml-->
<view class="T">
  <view class="tb">
    <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
      <swiper-item wx:for="{{swiperList}}" wx:key="swiperList" class="{{cardCur==index?'cur':''}}">
        <view class="swiper-item">
          <image src="{{item.url}}" mode="scaleToFill" wx:if="{{item.type=='image'}}"></image>
          <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
        </view>
      </swiper-item>
    </swiper>
  </view>
  <view class="cel">
    <view class="cell" wx:for="{{yyxx}}" wx:key="yyxx" wx:for-index="index">
      <view style="width: 100%;height: 0.8em;"></view>
      <view class="name">
        <view class="photo">
          <image class="pho" src="{{item.avatar_url}}"></image>
        </view>
        <view class="nm">
          <text style="font-weight: bold;font-size: 20px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{item.name}}\n</text>
          <text style="font-size: 18px;margin-top:1em;">好评率：<text style="color: red;">{{item.positive_review_rate}}%</text></text>
        </view>
      </view>
      <view style="width: 100%;height: 0.8em;border-bottom: 0.5px solid gray;"></view>
      <view class="where">
        <view style="width: 100%;height: 0.8em;"></view>
      </view>
      <view class="dh">
        <view class="dz">
          <view class="img">
            <image src="/images/dizhi.png"></image>
          </view>
          <text style="margin-left: 3%;color: gery;text-align: center;">{{item.address}}</text>
        </view>
        <view class="go" bindtap="dj" data-index="{{index}}">
          <view class="img">
            <image src="/images/go.png"></image>
          </view>
          <text style="margin-left: 3%;color: gery;">主页</text>
        </view>
      </view>
      <view style="width: 100%;height: 0.8em;"></view>
    </view>
  </view>
</view>